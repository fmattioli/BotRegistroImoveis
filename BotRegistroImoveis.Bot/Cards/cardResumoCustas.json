{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "size": "Large",
                  "weight": "Bolder",
                  "wrap": true,
                  "text": "Resumo da(s) custa(s)"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "url": "${status_url}",
                  "altText": "${status}",
                  "height": "30px"
                }
              ],
              "width": "auto"
            }
          ]
        }
      ],
      "bleed": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "Protocolo:",
              "wrap": true,
              "size": "ExtraLarge"
            },
            {
              "type": "TextBlock",
              "size": "Large",
              "text": "${protocolo}",
              "wrap": true
            }
          ]
        },
        {
          "type": "FactSet",
          "spacing": "Large",
          "facts": [
            {
              "title": "Data recepção:",
              "value": "${data_recepcao}"
            },
            {
              "title": "Data expira:",
              "value": "${data_expira}"
            },
            {
              "title": "Natureza:",
              "value": "${natureza}"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}